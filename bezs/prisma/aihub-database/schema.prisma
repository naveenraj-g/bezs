generator client {
    provider = "prisma-client-js"
    output   = "../generated/ai-hub"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_AI_HUB")
}

enum AiModelType {
    PRE_AVAILABLE
    CUSTOM
}

model AiModel {
    id          String      @id @default(uuid())
    displayName String?     @unique
    modelName   String?
    tokens      String?
    type        AiModelType
    secretKey   String?     @unique
    modelUrl    String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id])
}

model Prompts {
    id          Int    @id @default(autoincrement())
    name        String
    description String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Assistant {
    id               Int    @id @default(autoincrement())
    name             String
    description      String
    greeting_message String
    prompt           String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
